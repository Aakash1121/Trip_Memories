<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragment.UsersSettingsFragment">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/imgUserSettingsProfilePhoto"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_marginTop="10dp"
                        android:scaleType="center"
                        android:src="@drawable/ic_launcher_background" />


                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/txtUserSettingsFirstName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/roboto"
                        android:layout_margin="10dp"
                        android:text="FirstName"
                        android:textColor="@color/color_alt_text"
                        android:textSize="16sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/imgUserSettingsProfilePhoto" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llUserSettings1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="vertical">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/gray" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btnSettingEditProfile"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/ic_baseline_edit_24"
                        android:drawableEnd="@drawable/ic_baseline_chevron_right_24"
                        android:drawablePadding="10dp"
                        android:focusable="true"
                        android:fontFamily="@font/roboto_bold"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:text="Edit Profile"
                        android:textAlignment="textStart"
                        android:textColor="@color/color_main_text" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/gray" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btnSettingNotifications"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/ic_baseline_notifications_active_24"
                        android:drawableEnd="@drawable/ic_baseline_chevron_right_24"
                        android:drawablePadding="10dp"
                        android:fontFamily="@font/roboto_bold"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:text="Notifications And Sounds"
                        android:textAlignment="textStart"
                        android:textColor="@color/color_main_text" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/gray" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btnSettingsAppearance"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/ic_baseline_appearance"
                        android:drawableEnd="@drawable/ic_baseline_chevron_right_24"
                        android:drawablePadding="10dp"
                        android:fontFamily="@font/roboto_bold"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:text="Appearance"
                        android:textAlignment="textStart"
                        android:textColor="@color/color_main_text" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/gray" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btnSettingsFeedback"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/ic_baseline_feedback_24"
                        android:drawableEnd="@drawable/ic_baseline_chevron_right_24"
                        android:drawablePadding="10dp"
                        android:elevation="2dp"
                        android:fontFamily="@font/roboto_bold"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:text="Feedback"
                        android:textAlignment="textStart"
                        android:textColor="@color/color_main_text" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/gray" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btnSettingLogOut"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/ic_baseline_logout"
                        android:drawablePadding="10dp"
                        android:elevation="2dp"
                        android:fontFamily="@font/roboto_bold"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:text="Log Out"
                        android:textAlignment="textStart"
                        android:textColor="@color/red" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/gray" />
                </LinearLayout>

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>